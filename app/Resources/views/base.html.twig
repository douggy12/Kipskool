<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Kipskool{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block link %}{% endblock %}
    </head>
    <body>
    <ul>
        <li>
            {% if app.user %}
                Logged in as {{ app.user.username }}
                <a href="/logout">logout </a>
                <a href="{{ path('perso_show', {'perso_id': app.user.id}) }}">Page perso</a>
                <a href="{{ path('perso_edit', {'perso_id': app.user.id}) }}">Editer son profil</a>
            {% else %}
                <a href="/login">login</a> or <a href="/register">Register</a>
            {% endif %}</li>
        {% if is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('sonata_admin_dashboard') }}">interface admin</a>
            </li>

        {% endif %}
        <li>
            <input type="text" id="rechercher">
            <div style="border: solid 1px black; position: absolute; background-color: white; z-index: 1000; min-width: 171px">
                <ul style="list-style: none" id="listeResultat">

                </ul>
            </div>
        </li>

    </ul>
        {% block body %}{% endblock %}
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    <script src="{{ asset('js/rechercher.js') }}"></script>

    </body>

</html>
