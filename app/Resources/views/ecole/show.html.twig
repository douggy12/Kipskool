{% extends 'base.html.twig' %}

{% block body %}
    <h1><a href="{{ path('admin_ecole', {'ecole_id': ecole.id}) }}">ADMIN</a></h1>

    <h1>Ecole</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ecole.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ecole.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ ecole.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ ecole.ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ ecole.pays }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ecole.description }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ ecole.link }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ ecole.mail }}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <a href="{{ path("addArticle", {"id":ecole.id}) }}">Ecrire un article</a>
    </ul>
    <table>
        <tr>
            <th>Titre</th>
            <th>Extrait</th>
            <th>Créé</th>

        </tr>
        {% for article in ecole.articles %}
            <tr>
                <td><a href="{{ path('articleecole_show',{'id': ecole.id, 'article_id': article.id}) }}"> {{ article.titre }}</a></td>
                <td>{{ article.texte }}</td>
                <td>{{ article.createdAt|date("d/m/Y") }}</td>
            </tr>
        {% endfor %}
    </table>
    <ul>
        <li>
            <a href="{{ path('promo_new', {'ecole_id': ecole.id}) }}">Create a new promo</a>
        </li>
    </ul>
    <table>
        <tr>
            <th>Promo</th>
            <th>Description</th>
        </tr>
        {% for promo in ecole.promos %}
            <tr>
                <td><a href="{{ path('promo_show', {'ecole_id': ecole.id, 'id': promo.id}) }}">{{ promo.nom }}</a></td>
                <td>{{ promo.description }}</td>
            </tr>
        {% endfor %}
    </table>

    <ul>
        <li>
            <a href="{{ path('ecole_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
