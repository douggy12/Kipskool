{% extends 'base.html.twig' %}
{% block body %}
    <script src="{{ asset('assets/vendor/ace-builds/src-min-noconflict/ace.js') }}"
            type="text/javascript"
            charset="utf-8">
    </script>

    <div id="page-container" class="header-fixed-top " style="width: 100%">

        <!-- Main Container -->
        <div id="main-container">
            <!-- Header -->
            <header class="navbar navbar-inverse navbar-fixed-top">
                <ul class="nav navbar-nav-custom">
                    <!-- Header Link -->
                    <li class="hidden-xs animation-fadeInQuick">
                        <a href="{{ path('ecole_index')}}"><strong>Index</strong></a>
                    </li>
                    <!-- END Header Link -->
                </ul>
                <ul class="nav navbar-nav-custom pull-right">
                    <!-- Search Form -->
                    <li>
                        <form action="" method="post" class="navbar-form-custom">
                            <input type="text" id="top-search" name="top-search" class="form-control"
                                   placeholder="Search..">
                        </form>
                    </li>
                    {% include 'login_menu.html.twig' %}
                    <!-- END Search Form -->
                </ul>
                <!-- END Left Header Navigation -->
            </header>
            <!-- END Header -->
            <div id="page-content" class="inner-sidebar-right">
                <!-- Static Layout Header -->
                <div class="content-header" style="min-height: 900px">
                    <div class="row">
                        {% for ecole in ecoles %}
                            <div class="col-sm-6">
                                <div class="header-section">
                                    <h1>
                                        <a href="{{ path('ecole_show', {'ecole_id': ecole.id}) }}">{{ ecole.nom }}</a>
                                    </h1>
                                </div>
                            </div>
                            <div class="col-sm-6 hidden-xs">
                                <div class="header-section">
                                    <ul class="breadcrumb breadcrumb-top">
                                        <li>
                                            {% if ecole.avatar != null %}
                                                <img src="{{ vich_uploader_asset(ecole,'avatar')|imagine_filter('avatar_mini') }}"
                                                     alt="image" class="nav-users-avatar"/>
                                            {% else %}
                                                <img src="{{ asset('img/LOGO_IMIE_res.jpg')|imagine_filter('avatar_mini') }}"
                                                     alt="image" class="nav-users-avatar"/>
                                            {% endif %}
                                        </li>
                                        <li>{{ ecole.adresse }}</li>
                                        <li>{{ ecole.ville }}</li>
                                        <li>{{ ecole.pays }}</li>
                                        <li>{{ ecole.mail }}</li>
                                        <li>{{ ecole.link }}</li>
                                    </ul>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- END Static Layout Header -->
            </div>
            <!-- END Page Content -->
{% endblock %}