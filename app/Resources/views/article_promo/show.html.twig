    {% include ':commentaire_article_promo:new.html.twig' %}
    <ul>
        <li>
            <a href="{{ path('promo_show',{'id': promo.id}) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('article_promo_edit', {'id': promo.id, 'article_promo_id': article_promo.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('article_promo_delete',{'id': promo.id, 'article_promo_id': article_promo.id }) }}">Delete</a>
        </li>
    </ul>
{% endblock %}