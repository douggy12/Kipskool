    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article_promo.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ article_promo.createdAt }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article_promo.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ article_promo.texte }}</td>
            </tr>
            <tr>
                <th>Srcfeature</th>
                <td>{{ article_promo.srcFeature }}</td>
