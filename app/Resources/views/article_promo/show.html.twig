        </tbody>
    </table>
    <table>
        {% for comment in article_promo.comments  %}
            <tr>
                <td>{{ comment.texte }}~~
                    <a href="{{ path('commentaire_delete', {'id': promo.id, 'article_promo_id': article_promo.id, 'commentaire_article_id': comment.id}) }}">Delete</a>~
