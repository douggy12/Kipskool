{% extends 'base.html.twig' %}

{% block body %}
    <h1>Promo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promo.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ promo.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ promo.description }}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <a href="{{ path('addArticlePromo',{'id': promo.id}) }}">Ecrire un article</a>
    </ul>
    <table>
    <tr>
        <th>Titre</th>
        <th>Cr√©e</th>
        <th>Texte</th>
    </tr>
        {% for article in promo.articlesPromo %}
            <tr>
                <td><a href="{{ path('articlePromoShow', {'id': promo.id, 'articlepromo_id': article.id }) }}">{{ article.titre }}</td>
                <td>{{ article.createdAt|date("d/m/Y") }}</td>
                <td>{{ article.texte }}</td>
            </tr>
            
        {% endfor %}
    </table>

    <ul>
        <li>
            <a href="{{ path('promo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('promo_edit', { 'id': promo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
