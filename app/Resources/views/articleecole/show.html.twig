{% extends 'base.html.twig' %}

{% block body %}
<ul>
    <li>
        <a href="{{ path('ecole_show',{'ecole_id': ecole.id }) }}">{{ ecole.nom }}</a>
    </li>
</ul>
    <h1>Articleecole</h1>

    <table>
        <tbody>
            <tr>
                <th>Auteur</th>
                <td>{{ articleEcole.auteur }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ articleEcole.createdAt|date("d/m/Y H:m:s") }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ articleEcole.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>
                    {% if articleEcole.srcFeature != 'article' %}
                        <img src="{{ vich_uploader_asset(articleEcole, 'srcFeature')|imagine_filter('article_image') }}">
                    {% endif %}
                    {{ articleEcole.texte }}
                </td>
            </tr>
            <tr>
                <th>Srcfeature</th>
                <td>{{ articleEcole.srcFeature }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ecole_show',{'ecole_id': ecole.id }) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('articleecole_edit', { 'article_ecole_id': articleEcole.id, 'ecole_id': ecole.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('articleecole_delete', { 'article_ecole_id': articleEcole.id, 'ecole_id': ecole.id}) }}">Supprimer</a>
        </li>

    </ul>


    {% include ':commentaireAjax:index.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
<script language="JavaScript" type="text/javascript">
    var article = {{ articleEcole.id }};
    var typeArticle = "{{ articleEcole.className }}";
</script>


<script src="{{ asset('js/commentaire.js') }}"></script>
{% endblock %}