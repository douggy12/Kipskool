{% extends 'base.html.twig' %}

{% block body %}
    <ul>
        <li><a href="{{ path('ecole_show', {'ecole_id': promo.ecole.id}) }}">{{ promo.ecole.nom }}</a></li>
        <li><a href="{{ path('promo_show', {'promo_id': promo.id}) }}">{{ promo.nom }}</a></li>
    </ul>
    <h1>Perso</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ perso.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ perso.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ perso.prenom }}</td>
        </tr>
        <tr>
            <th>Mail</th>
            <td>{{ perso.Email }}</td>
        </tr>
        <tr>
            <th>Born</th>
            <td>{{ perso.born|date('d-m-Y') }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ perso.password }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('promo_show', {'promo_id': promo.id}) }}">Back to the list</a>
        </li>

    </ul>

    <ul>
        <li>
            <a href="{{ path('articleperso_new', { 'perso_id' : perso.id} ) }}">Ajouter un article</a>
        </li>
    </ul>

    <table>
        <tr>
            <th>créé le :</th>
            <th>titre</th>
            <th>texte</th>
            <th>auteur</th>
        </tr>
        {% for article in perso.articles %}
            <tr>
                <td>{{ article.createdAt|date("d-m-Y") }}</td>
                <td>
                    <a href="{{ path('articleperso_show', {'article_perso_id': article.id, 'perso_id': perso.id}) }}">{{ article.titre }}</a>
                </td>
                <td>{{ article.texte }}</td>
                <td>{{ article.auteur.nom }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
